<div id="additional-info" class="row">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    <h1>Please Enter Additional Info About You</h1>
    <%= bootstrap_form_for(current_user, as: 'user', url: finish_signup_path(current_user), :html => { role: 'form', class: "login-form"}) do |f| %>
    <div class="form-group">
      <%= f.text_field :school, :value => '', class: 'form-control', placeholder: 'Your School' %>
    </div>
    <div class="form-group">
      <%= f.text_field :specialty, :value => '', class: 'form-control', placeholder: 'Your Specialty' %>
    </div>
    <div class="form-group">
      <%= f.select(:gender, ['Male','Female'] , {include_blank: 'Select Your Gender'}) %>
    </div>
    <div class="actions">
      <%= f.submit 'Continue', :class => 'btn btn-primary' %>
    </div>
    <div class="actions mar-t-10">
      <%= link_to 'skip for now', interviews_dash_board_path %>
    </div>
    <% end %>
  </div>
</div>
