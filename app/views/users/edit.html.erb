<div class="row">
  <div class="col-sm-12 col-md-6">
    <h1>Account Info</h1>
    <%= form_for(current_user, html: { method: :put, class:'pad-20', id: 'user-info'}) do |f| %>
    <%= f.label 'Email' %>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <%= f.label 'Current Password' %>
    <div class="form-group">
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
    </div>
    <%= f.label 'New Password' %>
    <div class="form-group">

      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
    <%= f.label 'Confirm New Password' %>
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>

  <div class="col-sm-12 col-md-6">
    <h1>Personal Info</h1>
    <%= form_for(current_user, url: user_path(current_user), html: { role: 'form', class: "pad-20", autocomplete: "off",  id: 'user-info'}) do |f| %>
    <%= f.label 'School' %>
    <div class="form-group">
      <%= f.text_field :school, class: 'form-control', value: @user.school.name %>
    </div>
    <%= f.label 'Specialty' %>
    <div class="form-group">
      <%= f.text_field :specialty, class: 'form-control', value: @user.specialty %>
    </div>
    <%= f.label 'Gender' %>
    <div class="form-group">
      <%= f.select :gender, ['Male','Female'] , { :include_blank => "Select Your Gender", :selected => @user.gender}, class: 'form-control', required: true, data: {'error-value-missing' => "Please Select Your Gender"} %>
    </div>
    <label class="mar-b-15"><h4>Address</h4></label>
    <div class="form-group">
      <%= f.text_field :address_street_and_house_number, class: 'form-control',  value: @user.street %>
    </div>
    <div class="form-group">
      <%= f.text_field :address_apartment_number, class: 'form-control', value: @user.apt %>
    </div>
    <div class="form-group">
      <% if @user.on_campus %>
      <label class="checkbox-inline"><input type="checkbox" value="true" name="user[address_on_campus]" checked>On Campus</label>
      <%else%>
      <label class="checkbox-inline"><input type="checkbox" value="true" name="user[address_on_campus]">On Campus</label>
      <%end%>
    </div>

    <div class="form-group">
      <%= f.text_field :address_city, class: 'form-control mar-r-15 mar-b-15', value: @user.city %>
      <%= f.text_field :address_state, class: 'form-control mar-r-15 mar-b-15', id: 'state-autocomplete', value: @user.state %>
      <%= f.text_field :address_zip, class: 'form-control mar-b-15', value: @user.zip%>
    </div>
    <div class="actions">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
