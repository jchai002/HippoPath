        </div>
        <a href="#step-4"><i class="fa fa-angle-right fa-2x"></i></a>
      </div>

      <div class="slide step" data-x="900" data-y="0" data-z="2400">
        <div class="slide-content">
          <h1>Slide 3</h1>
          <div class="place-holder">place holder</div>
          </div>
          <a href="#step-1"><i class="fa fa-angle-right fa-2x"></i></a>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
  function preparePage(callback){
    impress().init();
    callback();
  }
  preparePage(function(){
    $('#impress').fadeIn(800);
    var countStarted;
    if  (!countStarted) {
      countStarted = true;
      $('.count').each(function () {
        $(this).prop('Counter',0).animate({
          Counter: $(this).text()
        }, {
          duration: 1500,
          easing: 'swing',
          step: function (now) {
            $(this).text(Math.ceil(now));
          }
        });
      });
    }
  })
})

</script>
