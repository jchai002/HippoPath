<%new_message_visble = message.unread?(current_user) ? 'new-message-visble' : ''%>
<li class="<%=  self_or_other(message) %>">
  <div class="chatboxmessagecontent relative">
    <span class="new-message-hidden <%=new_message_visble%> label label-success absolute">
      NEW
    </span>
    <div class="messagewrapper">
      <div class="avatar">
        <%if message_interlocutor(message).image.exists?%>
          <%= image_tag message_interlocutor(message).image.url(:small)%>
        <%else%>
          <%= image_tag 'portraitplaceholder.png' %>
        <%end%>
      </div>
      <p><%= message.body %></p>
    </div>
    <time>
      <span class="time-<%=message.id%>"></span>
    </time>
  </div>
</li>

<script>
  function displayTime() {
    var timeDisplay = $('.time-<%=message.id%>');
    var time = moment().format('LLL');
    timeDisplay.text(time);
    console.log(timeDisplay)
  }
  $(document).change(displayTime());
</script>
