<%@public = true%><input type="hidden" id="public-page" />
<div class="bg-container">
  <div class="login-form">
    <h2>Sign up</h2>
    <hr/>
    <%if alert%>
    <div class="alert alert-danger" role="alert"><%= alert %></div>
    <%end%>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <em class="no-text-mod">(must be a valid .edu email address)</em>
      <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "email", pattern: "^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.+-]+\.edu$", data: {'error-value-missing' => "Please Enter Your Email", 'error-pattern-mismatch' => "Please Enter A Valid .edu Email Address"}  %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "password"  %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: "password confirmation"  %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
