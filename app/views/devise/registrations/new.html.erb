<%@landing_page = true%>
<div class="bg-container">
  <div class="login-form">
    <h2>Sign up</h2>
    <hr/>
    <%if alert%>
    <div class="alert alert-danger" role="alert"><%= alert %></div>
    <%end%>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "email"  %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "password"  %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: "password confirmation"  %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
