<%@public = true%><input type="hidden" id="public-page" />
<div class="bg-container">
  <div class="login-form">
    <h2>Forgot your password?</h2>
    <hr>
    <%if resource.errors.full_messages.first %>
    <div class="alert alert-danger" role="alert"><% resource.errors.full_messages.each do |message|%>
        <p><%=message%></p>
      <%end%>
    </div>
    <%end%>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div >
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, hide_label: true, class: 'form-control', placeholder: 'email' %>
    </div>

    <div class="form-group">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-default' %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
